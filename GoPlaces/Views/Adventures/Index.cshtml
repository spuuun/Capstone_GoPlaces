@model IEnumerable<GoPlaces.Models.Adventure>

@{
    ViewData["Title"] = "Index";
}

<style>
    td > a {
        text-decoration: none;
            color: #212529;
    }
    td > a:hover {
        color:#0366d6;
        text-decoration: underline;
    }
</style>

<h1>MY ADVENTURES</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AdventureId">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AdventureId">

                        @Html.DisplayFor(modelItem => item.Description)
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AdventureId">

                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </a>
                </td>
                <td>
                    @{
                        if (item.IsPublic)
                        {
                            <p style="background-color: darkgreen; color: cornsilk;">Public</p>
                        }
                        else
                        {
                            <p style="background-color: darkred; color: cornsilk;">Private</p>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdventureId"><i class="fa fa-wrench"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.AdventureId"><i class="fa fa-close"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
